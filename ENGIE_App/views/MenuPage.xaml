<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ENGIE_App.MenuPage"
             >
    <ContentPage.Content>
        <StackLayout>
            <!--Buttons for navigation go here-->
            <Button
                Text="Home"
                Padding="0, 30, 0, 30"
                Clicked="GoHome"/>
            <Button
                Text="Help"
                Padding="0, 30, 0, 30"
                Clicked="GoHelp"/>
            <Button
                Text="Forms"
                Padding="0, 30, 0, 30"
                Clicked="GoForm"/>
            <Button
                Text="Recently Submitted"
                Padding="0, 30, 0, 30"
                Clicked="GoRecentlySubmitted"/>
            <Button
                Text="Scan"
                Padding="0, 30, 0, 30"
                Clicked="GoScan"/>
            <Button
                Text="Login"
                Padding="0, 30, 0, 30"
                Clicked="GoLogin"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>