<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ENGIE_App.MainPage"
             BackgroundColor="White"
             ControlTemplate="{StaticResource MainPageTemplate}"
             Title="Home">
    <ContentPage.Content>
        <StackLayout Margin="20">
            <Label
                x:Name="WecomeLabel"
                Text="Welcome"
                TextColor="#444444"
                HorizontalTextAlignment="Center"
                FontSize="Large"
                Padding="0, 40, 0, 40"/>
            <Image Source="engielogo"
                   HorizontalOptions="Center"
                   WidthRequest="500"/>
            <Label 
                x:Name="MainPageMainTextBody"
                Text="Welcome to the ENGIE assets app. For help or video tutorials visit the help section of the app accessable through the menu at the top left. Bit more text, filler sort of text to pad out this textbox until I write the rest. This section is quite long on the GUI design and theres a fair bit of space to fill"
                Padding="25, 40, 25, 0"
                FontSize="Medium"/>
        </StackLayout>
    </ContentPage.Content>
    

</ContentPage>
